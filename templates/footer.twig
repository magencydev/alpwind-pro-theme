<footer id="footer" class="pt-16 pb-10 bg-black">

	<div class="container mx-auto px-6 pb-4 relative z-10">
		<div class="flex flex-wrap justify-between gap-6 sm:gap-8 xl:gap-12">
			<div>
				<a href="{{ site.url }}" title="{{ site.name }}">
					{% if footer_logo %}
						<img src="{{ footer_logo }}" class="w-40 max-w-full" alt="{{ site_tagline }}" />
					{% else %}
						<span class="text-xl xl:text-2xl font-bold text-white">
							{{ site.name }}
						</span>
					{% endif %}
				</a>
			</div>

			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-6 gap-6 lg:gap-8 flex-grow">
				{% include 'menu-footer.twig' with { 'items': primary_menu.get_items } %}
			</div>
		</div>
	</div>
</footer>
